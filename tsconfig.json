{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}